{% extends 'base.html.twig' %}

{% block title %}Nos produits - La boutique Lomo{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

    <div class="row">
        {% for product in products %}
            <div class="col-md-4">
                <div class="product__item-style text-center">
                    <img src="/uploads/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
                    <h4>{{ product.name }}</h4>
                    <span class="product__subtitle">{{ product.subtitle }}</span>
                    <span class="product__price">{{ product.price }}</span>
                </div>
            </div>

        {% endfor %}
    </div>
{% endblock %}
