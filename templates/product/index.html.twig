{% extends 'base.html.twig' %}

{% block title %}Nos produits - La boutique Lomo{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>

        <div class="col-md-9 mobile-space">
            <h1 class="text-center text-uppercase">Le catalogue</h1>
            <div class="row mb-5">
                {% for product in products %}
                    <div class="col-md-4">
                        {% include 'product/single_product.html.twig' %}
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
